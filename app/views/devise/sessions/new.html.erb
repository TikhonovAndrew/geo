<div id="index-banner" class="parallax-container">
  <div class="parallax"><img class="responsive-img" src='/assets/login.jpg'></div>
</div>

<br><br>

<div class="container">
<div class="row center">
  <h5 class="header col s12 light teal-text text-darken-1 "><b>Please enter your credentials</b></h5>
</div>
</div>





<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="row">
 	<div class="col s3"></div>
    <form class="col s6">
      <div class="row">
        <div class="input-field col s6">
          <%= f.input :email, required: false, autofocus: true %>
        </div>
      </div>
      <div class="row">
      	<div class="col s3"></div>
        <div class="input-field col s6 ">
          <%= f.input :password, required: false %>
        </div>
      </div>
      <div class="col s5"></div>
      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    </form>
  </div>
  <% end %>

<div class="row">
  <div class="col s5"></div>
  <div class="col s6">
  
    <h6><%= render "devise/shared/links" %></h6>

  </div>
</div>




